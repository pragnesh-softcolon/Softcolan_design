<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".getAge">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableLayout
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/group1"
                android:layout_height="@dimen/_50sdp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_32ssp"
        android:text="How old are\nyou?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_370sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/style1"
            android:gravity="center_horizontal">

            <ImageView
                android:src="@drawable/bg_img"
                android:layout_marginTop="@dimen/_120sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_102sdp"
                android:layout_height="@dimen/_70sdp"
                android:textSize="@dimen/_31ssp"/>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_130sdp"
                android:layout_centerInParent="true"
                app:np_width="@dimen/_150sdp"
                app:np_dividerType="underline"
                app:np_dividerColor="@android:color/transparent"
                app:np_height="@dimen/_80sdp"
                app:np_max="100"
                app:np_orientation="horizontal"
                app:np_min="0"
                app:np_selectedTextColor="@color/black"
                app:np_selectedTextSize="@dimen/_25ssp"
                app:np_textColor="#292525"
                app:np_textSize="@dimen/_15ssp"
                app:np_value="18"
                app:np_wheelItemCount="6" />

            <TextView
                android:textSize="@dimen/_15ssp"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_190sdp"
                android:text="years"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>


    <RelativeLayout
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/l1"
            android:layout_marginLeft="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/dot_active"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_2sdp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/dot_active"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_2sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toEndOf="@id/l1" />

        <LinearLayout
            android:layout_toEndOf="@id/l2"
            android:id="@+id/l3"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/dot_inactive"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_2sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_toEndOf="@id/l3"
            android:id="@+id/l4"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/dot_inactive"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_2sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_toEndOf="@id/l4"
            android:id="@+id/l6"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/dot_inactive"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_2sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp" />

        <android.widget.Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l3"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/buttone_style"
            android:text="next"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>
    </ScrollView>